import React, { useState, useEffect } from "react";
import { useNavigate } from "react-router-dom";
import BackToDashboard from "../../common/components/BackToDashboard";
import { getAllBatches, setStatus, deleteBatch, downloadText } from "../../common/storage/payrollStore";

export default function ManagePayroll() {
  const [batches, setBatches] = useState([]);
  const [selectedBatch, setSelectedBatch] = useState(null);
  const navigate = useNavigate();

  useEffect(() => {
    setBatches(getAllBatches());
  }, []);

  const refresh = () => setBatches(getAllBatches());

  const editBatch = (batchId) => navigate("/payroll", { state: { batchId } });

  const submitDraft = (batchId) => {
    setStatus(batchId, "Submitted", { updatedAt: new Date().toISOString() });
    refresh();
  };

  const remove = (batchId) => {
    deleteBatch(batchId);
    refresh();
  };

  const viewDetails = (batch) => setSelectedBatch(batch);
  const closeModal = () => setSelectedBatch(null);

  const calculateTotalAmount = (batch) => {
    return batch.payments.reduce((sum, p) => sum + Number(p.amount || 0), 0);
  };

  const downloadSummary = (batch) => {
    const lines = [
      Payroll Batch Summary — ${batch.id},
      Status: ${batch.status},
      Created: ${batch.createdAt ? new Date(batch.createdAt).toLocaleString() : "-"},
      Updated: ${batch.updatedAt ? new Date(batch.updatedAt).toLocaleString() : "-"},
      Currency: ${batch.instruction.paymentCurrency},
      Debit Account: ${batch.instruction.debitAccount},
      Date: ${batch.instruction.date},
      "",
      "Payments:",
      ...batch.payments.map(
        (p, i) =>
          ${i + 1}. ${p.payeeName} | ${p.payeeDetails} | ${p.accountNumber} | ${p.amount} ${batch.instruction.paymentCurrency} | Ref: ${p.reference}
      ),
    ];
    downloadText(Payroll_${batch.id}_Summary.txt, lines.join("\n"));
  };

  // ✅ Old working print thing kept intact
  const printBatch = () => {
    const section = document.getElementById("batch-print-section");
    if (!section) return;

    const html = section.innerHTML;
    const w = window.open("", "_blank");
    w.document.write(`
      <html>
        <head>
          <title>Payroll Batch ${selectedBatch.id}</title>
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
          <style>
            body { font-family: Arial, sans-serif; padding: 20px; }
            h6 { background: #f1f1f1; padding: 5px; border-radius: 4px; margin-top: 20px; }
            table { border: 1px solid #ddd !important; width: 100%; border-collapse: collapse; }
            th { background-color: #f9f9f9; }
            td, th { padding: 6px !important; border: 1px solid #ccc !important; text-align: left; }
          </style>
        </head>
        <body>
          ${html}
        </body>
      </html>
    `);
    w.document.close();
    w.print();
  };

  // ✅ Helper for actions (dropdown if >2)
  const renderActions = (batch) => {
    let actions = [];

    // Always keep View separate
    actions.push(
      <button key="view" className="btn btn-sm btn-info me-2" onClick={() => viewDetails(batch)}>
        View
      </button>
    );

    if (batch.status === "Draft") {
      actions.push(
        <button key="edit" className="btn btn-sm btn-primary" onClick={() => editBatch(batch.id)}>
          Edit
        </button>
      );
      actions.push(
        <button key="submit" className="btn btn-sm btn-success" onClick={() => submitDraft(batch.id)}>
          Submit
        </button>
      );
      actions.push(
        <button key="delete" className="btn btn-sm btn-outline-danger" onClick={() => remove(batch.id)}>
          Delete
        </button>
      );
    }

    if (batch.status === "Approved" || batch.status === "Rejected") {
      actions.push(
        <button key="download" className="btn btn-sm btn-outline-primary" onClick={() => downloadSummary(batch)}>
          Download Summary
        </button>
      );
    }

    // If more than 2 (excluding View), show dropdown
    if (actions.length > 2) {
      return (
        <>
          {actions[0]} {/* View always visible */}
          <div className="btn-group">
            <button
              type="button"
              className="btn btn-sm btn-secondary dropdown-toggle"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              More
            </button>
            <ul className="dropdown-menu">
              {actions.slice(1).map((action, idx) => (
                <li key={idx} className="dropdown-item">
                  {action}
                </li>
              ))}
            </ul>
          </div>
        </>
      );
    }

    // Else show all normally
    return actions;
  };

  return (
    <div className="container my-4">
      <div className="d-flex justify-content-between align-items-center mb-3">
        <h2 className="mb-4 text-center p-2 rounded">Manage Payroll</h2>
        <BackToDashboard />
      </div>

      <div className="table-responsive">
        <table className="table table-bordered text-center align-middle">
          <thead className="table-light">
            <tr>
              <th>Batch ID</th>
              <th>Status</th>
              <th>Date Created</th>
              <th>Payments Count</th>
              <th>Total Amount</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {batches.length === 0 && (
              <tr>
                <td colSpan="6">No payroll batches found.</td>
              </tr>
            )}
            {batches.map((b) => (
              <tr key={b.id}>
                <td>{b.id}</td>
                <td>
                  <span
                    className={
                      "badge " +
                      (b.status === "Approved"
                        ? "bg-success"
                        : b.status === "Rejected"
                        ? "bg-danger"
                        : b.status === "Submitted"
                        ? "bg-warning text-dark"
                        : "bg-secondary")
                    }
                  >
                    {b.status}
                  </span>
                </td>
                <td>{b.createdAt ? new Date(b.createdAt).toLocaleString() : "-"}</td>
                <td>{b.payments.length}</td>
                <td>{calculateTotalAmount(b)} {b.instruction.paymentCurrency}</td>
                <td className="text-nowrap">{renderActions(b)}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>

      {/* Details Modal */}
      {selectedBatch && (
        <div className="modal fade show" style={{ display: "block", background: "rgba(0,0,0,0.5)" }}>
          <div className="modal-dialog modal-lg">
            <div className="modal-content">
              <div className="modal-header">
                <h5 className="modal-title">Batch Details — {selectedBatch.id}</h5>
                <button type="button" className="btn-close" onClick={closeModal}></button>
              </div>
              <div className="modal-body" id="batch-print-section">
                <h6>Instruction Details</h6>
                <ul>
                  <li><strong>Currency:</strong> {selectedBatch.instruction.paymentCurrency}</li>
                  <li><strong>Debit Account:</strong> {selectedBatch.instruction.debitAccount}</li>
                  <li><strong>Date:</strong> {selectedBatch.instruction.date}</li>
                </ul>

                <h6>Payments</h6>
                <div className="table-responsive">
                  <table className="table table-sm table-bordered">
                    <thead>
                      <tr>
                        <th>Reference</th>
                        <th>Payee Role</th>
                        <th>Payee Name</th>
                        <th>Account Number</th>
                        <th>Amount</th>
                      </tr>
                    </thead>
                    <tbody>
                      {selectedBatch.payments.map((p, idx) => (
                        <tr key={idx}>
                          <td>{p.reference}</td>
                          <td>{p.payeeDetails}</td>
                          <td>{p.payeeName}</td>
                          <td>{p.accountNumber}</td>
                          <td>{p.amount} {selectedBatch.instruction.paymentCurrency}</td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>

                {(selectedBatch.status === "Approved" || selectedBatch.status === "Rejected") &&
                  selectedBatch.meta && (
                    <>
                      <h6>Approval</h6>
                      <ul>
                        <li><strong>Decision:</strong> {selectedBatch.status}</li>
                        <li><strong>By:</strong> {selectedBatch.meta.approvedBy || "-"}</li>
                        <li><strong>At:</strong> {new Date(selectedBatch.meta.approvedAt).toLocaleString()}</li>
                        {selectedBatch.meta.remarks && (
                          <li><strong>Remarks:</strong> {selectedBatch.meta.remarks}</li>
                        )}
                      </ul>
                    </>
                  )}
              </div>
              <div className="modal-footer">
                <button type="button" className="btn btn-outline-primary" onClick={printBatch}>
                  Print
                </button>
                <button type="button" className="btn btn-secondary" onClick={closeModal}>
                  Close
                </button>
              </div>
            </div>
          </div>
        </div>
      )}
    </div>
  );
}
